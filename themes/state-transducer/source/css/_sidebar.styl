@import "_settings"

.sidebar
  position: absolute
  z-index: 10
  top: $header-height
  left: 0
  bottom: 0
  overflow-x: hidden
  overflow-y: auto
  -webkit-overflow-scrolling: touch
  -ms-overflow-style: none
  h2
    margin-top: .2em
  ul
    list-style-type: none
    margin: 0
    line-height: 1.5em
    padding-left: 1em
  li
    margin-top: .5em
  .sidebar-inner
    width: 230px
    padding: $content-padding-top + 10px 20px 60px 60px
  .version-select
    vertical-align: middle
    margin-left: 5px
  .menu-root
    padding-left: 0
  .menu-sub
    font-size: .85em
  .sidebar-link
    color: $light
    font-weight: 400
    &.current
      font-weight: 400
      color: $main-color
    &.new
      &:after
        content: "NEW"
        display: inline-block
        font-size: 10px
        font-weight: 600
        color: #fff
        background-color: $main-color
        line-height: 14px
        padding: 0 4px
        border-radius: 3px
        margin-left: 5px
        vertical-align: middle
        position: relative
        top: -1px
    &:hover
      border-bottom: 2px solid $main-color
  .section-link
    &.active
      font-weight: bold
      color: $main-color
  .main-menu
    margin-bottom: 20px
    display: none
    padding-left: 0
  .nav-dropdown
    h4
      font-weight: normal
      margin: 0

@media screen and (max-width: 900px)
  .sidebar
    position: fixed
    z-index: 10
    background-color: #f9f9f9
    transition: all .2s cubic-bezier(0.2, 0.1, 0.1, 1)
    -webkit-transform: translate(-280px, 0)
    transform: translate(-280px, 0)
    box-shadow: 0 0 10px rgba(0,0,0,.1)
    height: 100%
    top: 0
    left: 0
    .main-menu
      display: block
    .sidebar-inner
      padding: 40px 15px 15px 15px
      box-sizing: border-box
    .sidebar-inner-index
      padding: 35px 15px 15px 15px
    &.open
      -webkit-transform: translate(0, 0)
      transform: translate(0, 0)

@media print
  .sidebar
    display: none
