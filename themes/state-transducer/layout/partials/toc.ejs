<ul class="menu-root">
  <% site.pages.find({type: type}).sort('order').each(function (p) { %>
    <% var fileName = p.path.replace(/^.+?\/([\w-]+)\.html/, '$1') %>
    <% if (type === 'tutorials') { %>
      <% if (fileName === 'index') { %>
        <li><h3>Introduction</h3></li>
      <% } %>
      <% if (fileName === 'password-meter') { %>
        <li><h3>Password meter</h3></li>
      <% } %>
      <% if (fileName === 'chess-game') { %>
        <li><h3>Chess game</h3></li>
      <% } %>
      <% if (fileName === 'tmdb-online-interface') { %>
        <li><h3>Movie database interface</h3></li>
      <% } %>
      <% if (fileName === 'real-world') { %>
        <li><h3 class="new">RealWorld clone</h3></li>
      <% } %>
    <% } %>
    <li>
      <a href="<%- url_for(p.path) %>" class="sidebar-link<%- page.title === p.title ? ' current' : '' %><%- p.is_new ? ' new' : '' %>"><%- p.title %></a>
    </li>
  <% }) %>
</ul>
